<!--                    android:text="Pending"-->
<!--                    android:textColor="@color/white" />-->
<!--            </LinearLayout>-->
            <ImageView
                android:id="@+id/cardview_flight_offers_item_offer_shadow_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_whatshot_black_24dp" />
            <TextView
                android:id="@+id/cardview_flight_offers_item_offer_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9ssp"
                android:layout_marginStart="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:text="23 %"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9ssp"
                android:layout_marginEnd="@dimen/_6sdp"
                android:text="OFF"
                android:textColor="@color/white" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:gravity="left"
        android:elevation="@dimen/_5sdp"
        >
        <TextView
            android:id="@+id/cardview_flight_offers_item_flight_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New York"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            />

        <TextView
            android:id="@+id/cardview_flight_offers_item_location_from_to_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medinah"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            />
        <TextView
