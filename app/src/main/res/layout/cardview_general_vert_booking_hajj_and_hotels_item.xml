<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/golds"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_home_flights_cardview_flight_offers_item_cr_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A1161616"

            >


            <!--        <androidx.cardview.widget.CardView-->
            <!--            android:id="@+id/lin_client_img"-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            app:cardCornerRadius="@dimen/_5sdp"-->
            <!--            android:background="@drawable/trangle_white_shape"-->
            <!--            >-->


<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="@dimen/_150sdp"-->
<!--                android:background="#A1161616"-->
<!--                />-->
            <!--        </androidx.cardview.widget.CardView>-->
            <LinearLayout
                android:id="@+id/cardview_general_vert_booking_hajj_and_hotels_item_status_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center|left"
                android:visibility="visible"
                android:layout_marginTop="@dimen/_7sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:padding="@dimen/_5sdp"
                android:orientation="horizontal"
                android:background="@drawable/circle_btn_yello_shape"
                >

                                <TextView
                                    android:id="@+id/cardview_general_vert_booking_hajj_and_hotels_item_status_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_9ssp"
                                    android:layout_marginStart="@dimen/_6sdp"
                                    android:layout_marginEnd="@dimen/_4sdp"
                                    android:text="Pending"
                                    android:textColor="@color/white" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp"
                android:layout_gravity="center"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:elevation="@dimen/_5sdp"
                    >
                    <TextView
                        android:id="@+id/cardview_general_vert_booking_hajj_and_hotels_item_user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="Name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        />

                    <TextView
                        android:id="@+id/cardview_general_vert_booking_hajj_and_hotels_item_package_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Package Name"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        />
                    <TextView
                        android:id="@+id/cardview_general_vert_booking_hajj_and_hotels_item_departure_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departure Date"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        />
                    <TextView
                        android:id="@+id/cardview_general_vert_booking_hajj_and_hotels_item_return_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Package Name"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        />

                    <TextView
                        android:id="@+id/cardview_general_vert_booking_hajj_and_hotels_item_total_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19 sep"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp"
                        />
                    <TextView
                        android:id="@+id/cardview_general_vert_booking_hajj_and_hotels_item_comment_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OFF"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/cardview_book_e_visa_offers_item_complete_payment_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:textSize="@dimen/_9ssp"
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:padding="@dimen/_5sdp"
                        android:background="@drawable/complete_blue_shape"
                        android:text="@string/complete_payment"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>