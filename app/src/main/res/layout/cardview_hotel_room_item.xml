    <androidx.cardview.widget.CardView

        android:orientation="vertical"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        android:layout_width="@dimen/_175sdp"
        android:layout_height="wrap_content"
        android:foreground="?selectableItemBackground"

        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/cardview_hotel_room_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="action_settings"
            android:scaleType="centerCrop"
            android:src="@drawable/inside_my_hotels_booking"
           />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_transparant_gray2_shape"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/_8sdp"
            android:elevation="@dimen/_5sdp"
            >

            <TextView
                android:id="@+id/cardview_hotel_room_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/photo_gallery"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maxinum : "
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                />
                <TextView
                    android:id="@+id/cardview_hotel_room_item_max_num_ber_room_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 Persons"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                >
                <TextView
                    android:id="@+id/cardview_hotel_room_item_max_num_ber_room_tv_cost_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 2880"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Per Room / Per Nights"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>
            <TextView
                android:id="@+id/cardview_hz_hajj_details_packages_pricing_item_send_inquiry_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_9ssp"
                android:padding="@dimen/_4sdp"
                android:background="@drawable/circle_btn_yello_shape"
                android:text="@string/book_now"
                android:textColor="@color/white"
                android:textStyle="bold"

                />
<!--            <TextView-->
<!--                android:id="@+id/cardview_hz_hajj_details_packages_pricing_item_send_inquiry_btn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="@dimen/_20sdp"-->
<!--                android:textSize="@dimen/_9ssp"-->
<!--                android:padding="@dimen/_5sdp"-->
<!--                android:gravity="center"-->
<!--                android:layout_marginEnd="@dimen/_10sdp"-->
<!--                android:layout_marginStart="@dimen/_10sdp"-->
<!--                android:background="@drawable/yeloo_btn"-->
<!--                android:text="@string/book_now"-->
<!--                android:textColor="@color/white"-->
<!--                android:textStyle="bold"-->

<!--                />-->
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>


</LinearLayout>