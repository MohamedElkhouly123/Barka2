<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp">
        <!--        android:layout_marginStart="@dimen/_30sdp"-->
        <!--        android:layout_marginEnd="@dimen/_30sdp"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:gravity="center">

            <ImageView
                android:id="@+id/dialog_evisa_booking_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:elevation="3dp"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:elevation="3dp"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="@string/evisa_success"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/dialog_evisa_booking_country_type_tv"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:text="IndianPakistani fees  :"
                    />
                <TextView
                    android:id="@+id/dialog_evisa_booking_country_type_price_tv"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:gravity="center"
                    android:elevation="3dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/txt_color_red"
                    android:text="250 $"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:text="@string/merchant_service_fees_3"
                    />
                <TextView
                    android:id="@+id/dialog_evisa_booking_servise_price_tv"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/txt_color_red"
                    android:text="7.5 $"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/total_amount_due"
                    />
                <TextView
                    android:id="@+id/dialog_evisa_booking_total_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/txt_color_red"
                    android:text="257.5 $"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/dialog_evisa_booking_pay_now_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/red_btn"
                android:text="Pay Now"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"

                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>