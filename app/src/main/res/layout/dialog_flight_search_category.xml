<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_20sdp"
    android:layout_gravity="center"
    >
<!--    app:cardCornerRadius="@dimen/_10sdp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/dialog_flight_search_category_close_btn"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="start"
                android:elevation="3dp"
                android:src="@drawable/ic_close_black_24dp"

                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:elevation="3dp"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/Check_availability"
                />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tdialog_flight_search_category_search_til"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_47sdp"
        style="@style/text_input_booking"
        android:layout_marginTop="@dimen/_25sdp"
        app:errorTextAppearance="@style/error_appearance"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/top_part_in_nav_genral_part_search_etxt"
            style="@style/EditTextLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/search"
            android:inputType="textAutoComplete"
            android:textSize="@dimen/_11ssp"
            android:layout_marginBottom="@dimen/_2sdp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_11sdp"
        >

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dialog_flight_search_category_search_price_til"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_47sdp"
            style="@style/text_input_booking"
            app:errorTextAppearance="@style/error_appearance"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_flight_search_category_search_price_etxt"
            style="@style/EditTextLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/SELECT_PRICE_RANGE"
            android:textSize="@dimen/_11ssp"
            android:layout_marginBottom="@dimen/_2sdp"
                android:focusable="true"
                android:editable="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>
        <Spinner
            android:id="@+id/dialog_flight_search_category_sp_price"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_14sdp"
            android:layout_marginEnd="@dimen/_14sdp"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:textAlignment="center"
            />
    </FrameLayout>
            <TextView
                android:id="@+id/dialog_flight_search_category_padding_txt"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:visibility="gone"
                />
            <LinearLayout
                android:id="@+id/dialog_flight_search_category_Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:elevation="@dimen/_5sdp"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:elevation="3dp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:textColor="@color/black"
                    android:text="@string/hotel_amenity"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/dialog_flight_search_category_recycler_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:scrollbars="horizontal"
                    />
            </LinearLayout>
    <Button
        android:id="@+id/dialog_flight_search_category_filter_now_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/blue_black_btn"
        android:text="@string/filter"
        android:textColor="@color/white"
        android:textSize="@dimen/_11ssp"
        android:textStyle="bold"

        />
            </LinearLayout>
            </ScrollView>
        </LinearLayout>
</androidx.cardview.widget.CardView>
