<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp">
        <!--        android:layout_marginStart="@dimen/_30sdp"-->
        <!--        android:layout_marginEnd="@dimen/_30sdp"-->

        <ScrollView
            android:layout_width="@dimen/_250sdp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/dialog_fright_booking_close_btn"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="start"
                android:elevation="3dp"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                />

            <EditText
                android:id="@+id/dialog_fright_booking_name_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/gradient_btn_gray_get_photo_visa_shape"
                android:hint="@string/enter_your_name"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="@dimen/_13ssp"
                android:inputType="textAutoComplete"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_15sdp"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:layout_gravity="start|center"
                android:text="( +1 )"
                android:textSize="@dimen/_13ssp"
                android:elevation="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_30sdp"
                />
            <EditText
                android:id="@+id/dialog_fright_booking_phone_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/gradient_btn_gray_get_photo_visa_shape"
                android:hint="@string/enter_your_phone"
                android:textColor="@color/blue"
                android:gravity="center"
                android:inputType="phone"
                android:textSize="@dimen/_13ssp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                />
            </FrameLayout>
            <EditText
                android:id="@+id/dialog_fright_booking_email_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/gradient_btn_gray_get_photo_visa_shape"
                android:hint="@string/enter_your_email"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="@dimen/_13ssp"
                android:inputType="textEmailAddress"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                />
            <TextView
                android:id="@+id/dialog_fright_booking_from_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text="NYC"
                />
            <TextView
                android:id="@+id/dialog_fright_booking_to_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text="QUAD"
                />
            <TextView
                android:id="@+id/dialog_fright_booking_from_date_tv_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text="QUAD"
                />
            <TextView
                android:id="@+id/dialog_fright_booking_to_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text="QUAD"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                >
                <TextView
                    android:id="@+id/dialog_fright_booking_choose_adults_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_btn_gray_get_photo_visa_shape"
                    android:gravity="center"
                    android:inputType="phone"

                    />
                <Spinner
                    android:id="@+id/dialog_fright_booking_sp_choose_adults"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />
            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                >
                <TextView
                    android:id="@+id/dialog_fright_booking_choose_childs_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_btn_gray_get_photo_visa_shape"
                    android:gravity="center"
                    android:inputType="phone"

                    />
                <Spinner
                    android:id="@+id/dialog_fright_booking_sp_choose_childs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />
            </FrameLayout>

<!--                <Spinner-->
<!--                    android:id="@+id/dialog_fright_booking_sp_choose_childs"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:background="@android:color/transparent"-->
<!--                    android:gravity="center"-->
<!--                    android:textAlignment="center"-->
<!--                    android:layout_marginStart="@dimen/_8sdp"-->
<!--                    android:layout_marginEnd="@dimen/_8sdp"-->
<!--                    />-->
<!--            <Spinner-->
<!--                android:id="@+id/dialog_fright_booking_sp_choose_childs"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/gradient_btn_gray_get_photo_visa_shape"-->
<!--                android:gravity="center"-->
<!--                android:textAlignment="center"-->
<!--                android:layout_marginStart="@dimen/_8sdp"-->
<!--                android:layout_marginEnd="@dimen/_8sdp"-->
<!--                android:layout_marginTop="@dimen/_8sdp"-->
<!--                />-->
            <Button
                android:id="@+id/dialog_fright_booking_book_now_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/red_btn"
                android:text="@string/book_now"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"
                android:textStyle="bold"

                />
        </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>