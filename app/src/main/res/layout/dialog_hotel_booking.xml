<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp">
        <!--        android:layout_marginStart="@dimen/_30sdp"-->
        <!--        android:layout_marginEnd="@dimen/_30sdp"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:gravity="center">

            <ImageView
                android:id="@+id/dialog_hotel_booking_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:elevation="3dp"
                android:src="@drawable/ic_close_black_24dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:elevation="3dp"
                android:textSize="@dimen/_14sdp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="@string/Reserve_A_Room"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text="You are now booking room  "
                    />
                <TextView
                    android:id="@+id/dialog_hotel_booking_type_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:text="QUAD"
                    />
<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:elevation="3dp"-->
<!--                    android:textSize="@dimen/_12sdp"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:text="  in"-->
<!--                    />-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text="in hotel "
                    />
                <TextView
                    android:id="@+id/dialog_hotel_booking_hotel_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:gravity="center"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black"
                    android:text="Elaf Kinda Hotel"
                    />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text=" please choose your"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:text="checkin and checkout dates bellow"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text="Availble dates range from "
                    />
                <TextView
                    android:id="@+id/dialog_hotel_booking_from_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/black"
                    android:text="2020-11-01"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="3dp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text=" to"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/dialog_hotel_booking_to_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:text="2020-11-01"
                />
            <TextView
                android:id="@+id/dialog_hotel_booking_check_in_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_btn_gray_get_photo_visa_shape"
                android:hint="@string/Check_in_date"
                android:textColor="@color/blue"
                android:gravity="center"
                android:inputType="textAutoComplete"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_25sdp"
                />
            <TextView
                android:id="@+id/dialog_hotel_booking_check_out_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_btn_gray_get_photo_visa_shape"
                android:hint="@string/Check_out_date"
                android:textColor="@color/blue"
                android:gravity="center"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_12sdp"
                />

            <Button
                android:id="@+id/dialog_hotel_booking_book_now_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@drawable/red_btn"
                android:text="@string/book_now"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold"

                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>